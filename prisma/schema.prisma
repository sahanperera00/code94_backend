generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  sku         String   @unique
  quantity    Int
  name        String
  description String
  images      String[]
  price       Float
}